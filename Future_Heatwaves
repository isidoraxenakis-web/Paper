# %%
from pyproj import Geod
from shapely.geometry import LineString, Point, Polygon
import numpy as np
import xarray as xr
from datetime import timedelta
import datetime as dt
import matplotlib.pyplot as plt
from netCDF4 import Dataset
import cartopy.crs as ccrs
import cartopy.feature as cfeature
import matplotlib.cm
import pandas as pd
from glob import glob
import xesmf as xe
import matplotlib as mpl
from matplotlib import gridspec
import cartopy.io.shapereader as shpreader
from cartopy.feature import ShapelyFeature
import glob

# %%
Maxtemp_SSP126_45_54 = xr.open_dataset ("/nfs/a68/lec1stt/Isidora_data/Daily_max_temp_wind_and_RH_variables_for_SSP126_INFERNO_Interactive_UKESM1_2090_2099.nc")
Mintemp_SSP126_45_54 = xr.open_dataset ("/nfs/a68/lec1stt/Isidora_data/Daily_min_temp_and_RH_variables_for_SSP126_INFERNO_Interactive_UKESM1_2090_2099.nc")

# %%
#Read in variables of minimum and maximum temperature, latitude, longitude and time
Inf_maxtemp_SSP126_45_54 = Maxtemp_SSP126_45_54['air_temperature'][:]
Inf_mintemp_SSP126_45_54 = Mintemp_SSP126_45_54['air_temperature'][:]

# %%
Inf_maxtemp_SSP126_45_54 = Inf_maxtemp_SSP126_45_54 - 273.15
Inf_mintemp_SSP126_45_54 = Inf_mintemp_SSP126_45_54 - 273.15

# %%
#Northern Hemisphere
#Index with temperature variables according to summer season
Nsummer_maxtemp = Inf_maxtemp_SSP126_45_54.sel(time = (Maxtemp_SSP126_45_54.time.dt.season == 'JJA'))
Nsummer_mintemp = Inf_mintemp_SSP126_45_54.sel(time = (Mintemp_SSP126_45_54.time.dt.season == 'JJA'))

#Calculate maximum and minimum temperature across a 9-day moving window mean
Nnineday_maxtemp = Nsummer_maxtemp.rolling(time = 9, center = True).mean()     
Nnineday_mintemp = Nsummer_mintemp.rolling(time = 9, center = True).mean()     

#Calculate the 90th percentile of the maximum and minimum 9-day moving window mean temperature
NPercentile_Tmax = Nnineday_maxtemp.quantile(0.9, dim = 'time')
NPercentile_Tmin = Nnineday_mintemp.quantile(0.9, dim = 'time')

#Define the temperature function of heatwaves where the summer max and min temperatures are larger than their 90th percentiles.
#Where this is true, repleace the value with 1, where it is not replace the value with 0
Ntemp_function = Nsummer_maxtemp.where(((Nsummer_maxtemp > NPercentile_Tmax) & (Nsummer_mintemp > NPercentile_Tmin)), 0)

Ntemp_function = Ntemp_function.where((Ntemp_function == 0.0), 1)
#Define a minimum observation window summation of 3 days for temperature function 
Nmin_observation_window = (Ntemp_function.rolling(time = 3, center = True).sum())

#Define heatwaves where the summ of observations is larger than 3
#Where this is true, repleace the value with 1, where it is not replace the value with 0
Nheatwave = Nmin_observation_window.where((Nmin_observation_window == 3), 0)

#Select only the values that are 
NHeatwave = Nheatwave.where((Nheatwave < 3), 1)

Nheatwave_timeav = NHeatwave.sum(dim = 'time')

# %%
#Southern Hemisphere
#Index with temperature variables according to summer season
Ssummer_maxtemp = Inf_maxtemp_SSP126_45_54.sel(time = (Maxtemp_SSP126_45_54.time.dt.season == 'DJF'))
Ssummer_mintemp = Inf_mintemp_SSP126_45_54.sel(time = (Maxtemp_SSP126_45_54.time.dt.season == 'DJF'))

#Calculate maximum and minimum temperature across a 9-day moving window mean
Snineday_maxtemp = Ssummer_maxtemp.rolling(time = 9, center = True).mean()     
Snineday_mintemp = Ssummer_mintemp.rolling(time = 9, center = True).mean()     

#Calculate the 90th percentile of the maximum and minimum 9-day moving window mean temperature
SPercentile_Tmax = Snineday_maxtemp.quantile(0.9, dim = 'time')
SPercentile_Tmin = Snineday_mintemp.quantile(0.9, dim = 'time')

#Define the temperature function of heatwaves where the summer max and min temperatures are larger than their 90th percentiles.
#Where this is true, repleace the value with 1, where it is not replace the value with 0
Stemp_function = Ssummer_maxtemp.where(((Ssummer_maxtemp > SPercentile_Tmax) & (Ssummer_mintemp > SPercentile_Tmin)), 0)

Stemp_function = Stemp_function.where((Stemp_function == 0.0), 1)
#Define a minimum observation window summation of 3 days for temperature function 
Smin_observation_window = (Stemp_function.rolling(time = 3, center = True).sum())

#Define heatwaves where the summ of observations is larger than 3
#Where this is true, repleace the value with 1, where it is not replace the value with 0
Sheatwave = Smin_observation_window.where((Smin_observation_window >= 3), 0)

#Select only the values that are 
SHeatwave = Sheatwave.where((Sheatwave < 3), 1)

#Count the heatwave occurences across 2010 for every latutide and longitude
Sheatwave_timeav = SHeatwave.sum(dim = 'time')

# %%
#Application of GFED mask
GFED_mask = xr.open_dataset("/nfs/a68/htmq9847/mask/GFED_basis_regions.nc")['GFED_basis_regions'][:]

#Regrid GFED mask
output_grid_Heatwave_GFED = xr.Dataset({"latitude": (["latitude"], Maxtemp_SSP126_45_54.latitude.values),

                       "longitude": (["longitude"], Maxtemp_SSP126_45_54.longitude.values)})
    
regridder_Heatwave_GFED = xe.Regridder(GFED_mask, output_grid_Heatwave_GFED, "bilinear")

output_grid_Heatwave_GFED = regridder_Heatwave_GFED(GFED_mask)

# %%
#North Hemisphere
NHeatwaves_landonly_GFED = Nheatwave_timeav.where((output_grid_Heatwave_GFED >0) & (output_grid_Heatwave_GFED < 15))

#South Hemisphere
SHeatwaves_landonly_GFED = Sheatwave_timeav.where((output_grid_Heatwave_GFED >0) & (output_grid_Heatwave_GFED < 15))

# %%
#South Hemisphere of Africa
Heatwaves_SSP126_45_54_SHAF = SHeatwaves_landonly_GFED[40:72, 0:100]
#Southeast Asia
Future_Heatwaves_SEA = SHeatwaves_landonly_GFED[75:100, 35:60]

# %%
Future_Heatwaves_SEA.max()

# %%
p = Future_Heatwaves_SEA.plot(
    transform=ccrs.PlateCarree(),
    cmap = "inferno_r",
    levels = [5,10,20,30,40,50,60,70,80],
    extend = "neither",
    add_labels = False,
    subplot_kws={"projection": ccrs.Orthographic(100, 0)},
     cbar_kwargs={
        "orientation": "horizontal",   # Make colorbar horizontal
        "pad": 0.05,                   # Space between plot and colorbar
        "aspect": 50,}
)
p.colorbar.ax.tick_params(labelsize=14)
ax = p.axes  

# Add features
ax.coastlines(resolution="110m", linewidth=1)
ax.add_feature(cfeature.BORDERS, linewidth=0.7)
